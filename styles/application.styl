@import "nib"

$sans-serif = "Open Sans", sans-serif

.container
	margin: 0 auto
	width: 960px

.columns
	@extends .container
	clearfix()
	padding: 30px 0 50px 0

	> .column
		box-sizing: border-box
		float: left

		&.narrow
			width: 25%

		&.wide
			padding-left: 20px
			width: 75%

h1
	font-size: 30px
	margin: 0.8em 0 0.15em 0

h2
	font-size: 24px
	margin: 0.6em 0 0.15em 0

h3
	font-size: 20px
	margin: 0.4em 0 0.15em 0

p, td, li
	font-size: 14px

html,
body
	margin: 0
	padding: 0

body
	background: url("../images/background.jpg") no-repeat scroll 50% 0 #000
	color: #f2f2f2
	font-family: $sans-serif

	> .header
		@extends .container
		padding: 95px 0 15px 0
		text-align: center

		ul
			list-style: none

	> .footer
		background: rgba(#fff, 0.1)
		border-top: 1px solid rgba(#fff, 0.2)
		padding: 30px 0

a
	color: lighten(#0079ae, 20%)

	&:hover
		color: lighten(#0079ae, 60%)
